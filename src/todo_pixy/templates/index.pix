from typing import List
from pixyverse.render_html.render import create_element

from todo_pixy.model import TODO, TODOSTATUS
def toggle_checkbox(tagName, props, children=[]):
    if props['checked']:
        return <input class_="toggle" type="checkbox" checked/>
    else:
        return <input class_="toggle" type="checkbox"/>

def todo_list(tagName, props, children=[]):
    todos = props['todos']
    return (<ul class_="todo-list">
                {[
                        <li class_={todo.status.value}>
                        <div class_="view">
                            <toggle_checkbox checked={todo.status == TODOSTATUS.completed}/>
                            <label>{todo.todo}</label>
                            <button class_="destroy"></button>
                        </div>
                        <input class_="edit" value="Create a TodoMVC template"/>
                    </li> for todo in todos]}
            </ul>)

